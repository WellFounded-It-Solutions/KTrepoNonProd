<?xml version="1.0" encoding="utf-8"?>
<se.infomaker.iap.ui.view.RecycleViewAwareConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:themeBackgroundColor="packageBackground">

    <se.infomaker.iap.theme.view.ThemeableImageView
        android:id="@+id/article_headline_descriptor_icon_background"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="8dp"
        android:src="@drawable/white_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:themeTint="packageBackground" />

    <se.infomaker.iap.theme.view.ThemeableImageView
        android:id="@+id/article_headline_descriptor_icon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/article_headline_descriptor_icon_background"
        app:layout_constraintEnd_toEndOf="@+id/article_headline_descriptor_icon_background"
        app:layout_constraintStart_toStartOf="@+id/article_headline_descriptor_icon_background"
        app:layout_constraintTop_toTopOf="@+id/article_headline_descriptor_icon_background"
        app:themeKey="packageHeadlineDescriptorIcon"
        app:themeTint="packageIcon" />

</se.infomaker.iap.ui.view.RecycleViewAwareConstraintLayout>