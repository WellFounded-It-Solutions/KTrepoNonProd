<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager android:id="@+id/pager"
                                       android:layout_height="match_parent"
                                       android:layout_width="match_parent">
    </androidx.viewpager.widget.ViewPager>
    <se.infomaker.iap.ui.promotion.view.ThemeablePageIndicatorView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        app:piv_viewPager="@id/pager"
        app:piv_animationType="scale"
        app:piv_interactiveAnimation="true"/>
    <se.infomaker.iap.theme.view.ThemeableTextView
        android:id="@+id/doneButton"
        android:text="@string/done_button"
        app:themeKey="buttonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="#ffffff"
        app:themeTouchColor="highlight"
        android:layout_toRightOf="@+id/indicator"
        tools:ignore="RtlHardcoded"/>
    <se.infomaker.iap.theme.view.ThemeableTextView
        android:id="@+id/nextButton"
        android:text="@string/done_button"
        app:themeKey="buttonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="#ffffff"
        app:themeTouchColor="highlight"
        android:layout_toRightOf="@+id/indicator"
        tools:ignore="RtlHardcoded"/>
    <se.infomaker.iap.theme.view.ThemeableTextView
        android:id="@+id/cancelButton"
        app:themeKey="cancelButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="#ffffff"
        app:themeTouchColor="highlight"
        android:layout_toRightOf="@+id/indicator"
        tools:ignore="RtlHardcoded"/>
</RelativeLayout>